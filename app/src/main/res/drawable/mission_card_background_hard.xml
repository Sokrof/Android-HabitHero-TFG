<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Fondo principal -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFF8DC"
                android:centerColor="#FFD700"
                android:endColor="#B8860B"
                android:angle="45" />
            <stroke
                android:width="2dp"
                android:color="@android:color/black" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Efecto metÃ¡lico superior -->
    <item android:bottom="2dp" android:right="2dp" android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#60FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>