<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Fondo de madera -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D2B48C"
                android:centerColor="#DEB887"
                android:endColor="#F5DEB3"
                android:angle="45" />
            <stroke
                android:width="2dp"
                android:color="#8B4513" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Detalles de madera -->
    <item android:bottom="4dp" android:right="4dp" android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#CD853F" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>