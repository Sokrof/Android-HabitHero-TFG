<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rpg_wood_background"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono RPG -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rpg_icon_background" />
            
            <ImageView
                android:id="@+id/mission_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_default_mission"
                android:tint="@color/white" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mission_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rpg_category_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Principal"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="serif" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/mission_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚔️ Realizado"
                    android:textColor="#228B22"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="serif" />

            </LinearLayout>

            <TextView
                android:id="@+id/mission_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Aprobar DI"
                android:textColor="#2F4F4F"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="serif" />

            <TextView
                android:id="@+id/mission_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Estudia!!"
                android:textColor="#696969"
                android:textSize="14sp"
                android:fontFamily="serif"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Experiencia/Tiempo RPG -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏰"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/mission_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47:30"
                android:textColor="#B8860B"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="serif" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>