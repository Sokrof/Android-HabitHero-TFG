<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <!-- Header extendido con barras superpuestas -->

    <!-- Lista de misiones con scroll infinito -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="-50dp"
        android:paddingTop="56dp"
        android:paddingBottom="16dp">

        <!-- Barras de estado superpuestas en la parte superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <!-- Contador de Nivel -->
            <TextView
                android:id="@+id/player_level_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="Nivel: 1"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Barras de estadísticas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Barra de Vida -->
                <ImageView
                    android:id="@+id/health_bar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/hp_5" />

                <!-- Barra de Maná -->
                <ImageView
                    android:id="@+id/mana_bar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/mp_0" />

                <!-- Barra de Experiencia -->
                <ImageView
                    android:id="@+id/experience_bar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/exp_0" />

            </LinearLayout>

        </LinearLayout>

        <!-- Cofre y mochila apilados verticalmente a la izquierda del personaje -->
        <LinearLayout
            android:id="@+id/chest_bag_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Mochila (inventario) encima -->
            <LinearLayout
                android:id="@+id/bag_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="8dp">

                <!-- Imagen de la mochila -->
                <ImageView
                    android:id="@+id/bag_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/bag"
                    android:scaleType="fitCenter" />

                <!-- Contador de recompensas en la mochila -->
                <TextView
                    android:id="@+id/bag_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="Items: 0"
                    android:textColor="#FFD700"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- Cofre debajo -->
            <LinearLayout
                android:id="@+id/chest_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <!-- Imagen del cofre (tamaño reducido) -->
                <ImageView
                    android:id="@+id/chest_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/chest"
                    android:scaleType="fitCenter" />

                <!-- Contador de cofres debajo del cofre -->
                <TextView
                    android:id="@+id/chest_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="Cofres: 0"
                    android:textColor="#FFD700"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- Personaje animado en el lado izquierdo -->

        <!-- Enemigo animado en el lado derecho -->

        <ImageView
            android:id="@+id/character_gif"
            android:layout_width="162dp"
            android:layout_height="182dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/personaje" />

        <ImageView
            android:id="@+id/enemy_gif"
            android:layout_width="118dp"
            android:layout_height="81dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="44dp"
            android:scaleType="fitXY"
            android:src="@drawable/enemigo"
            android:clickable="true"
            android:focusable="true" />

        <!-- Icono de calavera y contador de vida del enemigo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="125dp"
            android:layout_marginBottom="115dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Contador de vida -->
            <TextView
                android:id="@+id/enemy_health_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="3/3"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Icono de calavera -->
            <ImageView
                android:id="@+id/skull_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/skull" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/missions_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingTop="56dp"
        android:paddingEnd="8dp"
        android:paddingBottom="80dp"
        tools:listitem="@layout/item_mission" />

    <!-- Mensaje cuando no hay misiones -->
    <TextView
        android:id="@+id/empty_missions_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Crea tu primera misión para empezar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:visibility="gone"
        android:paddingTop="56dp"
        android:paddingBottom="80dp" />

</LinearLayout>